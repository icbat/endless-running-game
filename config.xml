<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.icbat.squareSquared" version="7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Square Squared</name>
    <description>
        An endless running game where a square hops over other stuff.
    </description>
    <author email="cobb.evan+squareSquared@gmail.com" href="http://icbat.github.io">
        Evan "icbat" Cobb
    </author>
    <content src="index.html"/>
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
      <preference name="KeepRunning" value="false"/>
      <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="assets/android/ldpi.png" density="ldpi"/>
        <icon src="assets/android/mdpi.png" density="mdpi"/>
        <icon src="assets/android/hdpi.png" density="hdpi"/>
        <icon src="assets/android/xhdpi.png" density="xhdpi"/>
        <icon src="assets/android/xxhdpi.png" density="xxhdpi"/>
        <icon src="assets/android/xxxhdpi.png" density="xxxhdpi"/>
    </platform>
    <allow-navigation href="https://square-squared-stats.herokuapp.com/launch" />
    <allow-navigation href="https://square-squared-stats.herokuapp.com/gameStart" />
    <allow-navigation href="https://square-squared-stats.herokuapp.com/score" />
</widget>
